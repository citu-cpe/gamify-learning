<!-- LEARNING RESOURCE INFO -->

<section class="section flex">
  <div>
    <h3>Learning Modules / Journey</h3>
    <div>
      <form
        class="grid grid-flow-row grid-cols-4 items-center gap-4"
        action="./save"
        method="POST"
      >
        <label for="title">Title</label>
        <input
          class="col-span-3 rounded-lg border bg-gray-50 px-3 py-2"
          type="text"
          name="title"
          value="<% if (locals.resource) { %><%= resource.title %><% } %>"
        />
        <label for="subtitle">Description</label>
        <input
          class="col-span-3 rounded-lg border bg-gray-50 px-3 py-2"
          type="text"
          name="subtitle"
          value="<% if (locals.resource) { %><%= resource.subtitle %><% } %>"
        />
        <label for="owner">Owner</label>
        <input
          class="col-span-3 rounded-lg border bg-gray-50 px-3 py-2"
          type="text"
          name="owner"
          value="<% if (locals.resource) { %><%= resource.owner %><% } %>"
        />
        <div class="flex gap-5">
          <label class="col-span-2" for="active">Show in public</label>
          <input class="bg-gray-100" type="checkbox" name="active"
          id="activeCheckBox" <%= locals.resource && resource.active ? "checked"
          : "" %> />
        </div>

        <textarea
          class="row-span-1 hidden bg-gray-100"
          name="body"
          id="htmlContent"
          cols="10"
          rows="10"
        >
        wew
      <% if (locals.resource) { %>
           <%= resource.body %>  
          <% } %>
      
      </textarea
        >

        <div class="col-span-4 flex justify-end">
          <button class="btn px-16">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- App Views -->
  <% if (!locals.resource) { %>
  <div class="h-[32rem] w-80 rounded-xl">
    <h2>Students' App Preview</h2>
    <div
      class="h-full w-full scale-90 resize overflow-x-hidden rounded-xl bg-gray-200 py-6 px-6"
      id="contentArea"
      contenteditable="true"
    ></div>
  </div>
  <% } %>>
</section>
