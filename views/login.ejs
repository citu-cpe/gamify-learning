<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body class="bg-gray-50 antialiased">
    <section class="h-full">
      <div
        class="mx-auto mt-6 flex h-full w-full flex-col items-center justify-center bg-gray-50 text-gray-700"
      >
        <div class="m-2 rounded-xl bg-white px-10 py-6 shadow-lg">
          <h3 class="py-3 text-center">Login to GoGamify</h3>
          <form
            id="loginForm"
            class="mx-auto flex max-w-sm flex-col space-y-6"
            action="/login"
            method="post"
          >
            <div>
              <label class="py-3 text-xl font-semibold" for="">Username</label>
              <input
                class="mt-2 w-full rounded-xl bg-white px-5 py-6 ring-2 ring-violet-200 focus:accent-inherit"
                type="email"
                placeholder="akoatapang.atao@gmail.com"
              />
            </div>
            <div>
              <label class="text-xl font-semibold" for="">Password</label>
              <input
                class="mt-2 w-full rounded-xl bg-white px-5 py-6 ring-2 ring-violet-200 focus:accent-inherit"
                type="password"
              />
            </div>
            <div class="flex justify-between py-2 text-sm">
              <div class="group">
                <label
                  class="group-hover:cursor-pointer"
                  for="remember-password"
                >
                  <input
                    class="mr-2 h-4 w-4 accent-violet-500 group-hover:cursor-pointer"
                    type="checkbox"
                    name="remember-password"
                    id="remember-password"
                    checked
                  />
                  <span>Remember me</span></label
                >
              </div>
              <a class="link text-right" href="#">Forgot your password?</a>
            </div>
            <div>
              <button
                class="btn--primary w-full rounded-xl px-5 py-6"
                type="submit"
              >
                Log in
              </button>
              <!-- <button class="btn w-full rounded-xl px-5 py-6" type="submit">
              Register
            </button> -->
            </div>
          </form>
        </div>
        <div class="mb-5 px-3 py-6 text-center">
          <a class="link" href="#">Create a Free GoGamify Account</a>
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
    </section>
    <script>
      window.onload = function () {
        document.getElementById("loginForm").reset();
        console.log("Window on load, inputs has been reset successfully.");
      };
    </script>
  </body>
</html>
