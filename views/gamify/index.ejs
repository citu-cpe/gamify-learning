<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <div class="container mx-auto">
      <section class="section flex flex-col items-center justify-center">
        <h1
          class="my-3 mb-5 from-violet-700 to-purple-400 text-6xl font-bold text-gray-900"
        >
          Gamify Learning
        </h1>

        <!-- Nav -->
        <div>
          <a class="btn" href="gamify/create">Start gamifying</a>
        </div>

        <!-- Learning Resources -->
        <div class="mt-10">
          <div class="flex justify-between">
            <h2>All Resources</h2>
            <ul class="flex justify-between">
              <li><a class="btn" href="#">Test</a></li>
              <li><a class="btn" href="#">Test</a></li>
              <li><a class="btn" href="#">Test</a></li>
              <li><a class="btn" href="#">Test</a></li>
              <li><a class="btn" href="#">Test</a></li>
            </ul>
          </div>

          <div
            class="sm: mt-10 flex flex-col flex-wrap items-center justify-center gap-3 border-t py-6 sm:flex-row"
          >
            <% if (resources.length > 0) { %> <% resources.forEach(resource => {
            %>

            <div class="single delete group">
              <div
                class="h-70 relative w-60 transform-gpu rounded-lg border px-4 py-5 shadow-sm transition-all duration-150 group-hover:scale-105 group-hover:shadow-lg"
              >
                <div
                  class="flex h-20 w-full items-center justify-center rounded-lg bg-gray-50"
                >
                  Image
                </div>
                <div
                  class="absolute top-3 right-3 hidden ease-in-out group-hover:flex group-hover:gap-2"
                >
                  <a
                    class="rounded-lg bg-violet-100 p-2 hover:cursor-pointer hover:bg-violet-200"
                    href="/gamify/<%= resource._id %>"
                  >
                    <span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                      >
                        <path
                          d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
                        /></svg
                    ></span>
                  </a>

                  <a
                    class="delete rounded-lg bg-violet-100 p-2 hover:cursor-pointer hover:bg-violet-200 hover:bg-blend-hard-light"
                    data-doc="<%= resource._id %>"
                  >
                    <span>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                          clip-rule="evenodd"
                        /></svg
                    ></span>
                  </a>
                </div>

                <div class="mt-5">
                  <h3 class="title"><%= resource.title%></h3>
                  <p class="snippet"><%= resource.subtitle %></p>
                </div>
              </div>
            </div>
            <% }) %> <% } else { %>
            <p class="py-6 text-center">No Learning Resources Gamified yet.</p>
            <% } %>
          </div>
        </div>
      </section>

      <script src="/js/gamify/index.js"></script>
    </div>
  </body>
</html>
